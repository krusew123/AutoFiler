{
  "types": {
    "bank_statement": {
      "container_formats": [".pdf"],
      "mime_types": ["application/pdf"],
      "content_keywords": [
        "Account Summary", "Beginning Balance", "Ending Balance",
        "Deposits", "Withdrawals", "Statement Period"
      ],
      "content_patterns": ["Statement\\s+Period", "Account\\s+Number"],
      "keyword_threshold": 2,
      "destination_subfolder": "Financial\\Bank Statements",
      "naming_pattern": "{original_name}_{date}"
    },
    "w2_tax_form": {
      "container_formats": [".pdf"],
      "mime_types": ["application/pdf"],
      "content_keywords": [
        "Wage and Tax Statement", "W-2",
        "Employer identification number",
        "Federal income tax withheld", "Social security wages"
      ],
      "content_patterns": ["Form\\s+W-2", "OMB\\s+No"],
      "keyword_threshold": 2,
      "destination_subfolder": "Financial\\Tax Documents\\W-2",
      "naming_pattern": "{original_name}_{date}"
    },
    "invoice": {
      "container_formats": [".pdf", ".docx"],
      "mime_types": [
        "application/pdf",
        "application/vnd.openxmlformats-officedocument.wordprocessingml.document"
      ],
      "content_keywords": [
        "Invoice", "Bill To", "Amount Due",
        "Payment Terms", "Invoice Number", "Invoice Date",
        "Invoice No", "Grand Total", "Total Due",
        "Prepared For", "Billing Information", "Remit To"
      ],
      "content_patterns": [
        "Invoice\\s*#",
        "Invoice\\s+No\\.?\\s*[:\\s]",
        "Invoice\\s+Number",
        "Invoice\\s+Date",
        "Due\\s+Date",
        "Total\\s+Due",
        "Grand\\s+Total",
        "Amount\\s+Due"
      ],
      "keyword_threshold": 2,
      "destination_subfolder": "Accounting\\Vendors\\VendorName",
      "naming_pattern": "{original_name}_{date}",
      "extraction_fields": {
        "vendor_name": {
          "patterns": [
            "^(?:From|Sender|Vendor|Sold\\s*By)\\s*:\\s*(.+?)$",
            "^(.+?,\\s*(?:Inc|LLC|Corp|Ltd|Company|LP|LLP)\\.?)\\s*$"
          ],
          "required": true,
          "cross_reference": "References/vendor_reference.json",
          "reference_key": "vendors",
          "supporting_fields": ["address", "phone", "tax_id"],
          "create_if_missing": true
        },
        "customer_name": {
          "patterns": [
            "Customer\\s+Name[:\\s]+(.+?)\\n",
            "Bill\\s*To[:\\s]*\\n\\s*(.+?)\\n",
            "Prepared\\s+For\\b.*\\n\\s*(.+?)(?:\\s+\\d|\\n)",
            "(?:Sold\\s*To|Ship\\s*To)[:\\s]*\\n?\\s*(.+?)\\n"
          ],
          "required": true,
          "cross_reference": "References/company_reference.json",
          "reference_key": "companies",
          "supporting_fields": [],
          "create_if_missing": false
        },
        "invoice_number": {
          "patterns": [
            "Invoice\\s*#[:\\s]*([A-Za-z0-9\\-]+)",
            "Invoice\\s+Number[:\\s]*([A-Za-z0-9\\-]+)",
            "Invoice\\s+No\\.?[:\\s]+([A-Za-z0-9\\-]+)"
          ],
          "required": true
        },
        "invoice_date": {
          "patterns": [
            "Invoice\\s+Date[:\\s]*(\\d{1,2}[/\\-]\\d{1,2}[/\\-]\\d{2,4})",
            "Date\\s+of\\s+Invoice[:\\s]*(\\d{1,2}[/\\-]\\d{1,2}[/\\-]\\d{2,4})",
            "Date[:\\s]*(\\d{1,2}[/\\-]\\d{1,2}[/\\-]\\d{2,4})"
          ],
          "required": true
        },
        "address": {
          "patterns": [
            "\\d+\\s+[A-Za-z].+(?:St|Street|Ave|Avenue|Blvd|Boulevard|Dr|Drive|Rd|Road|Ln|Lane|Way|Ct|Court|Pl|Place)\\.?[,\\s]+[A-Za-z\\s]+,?\\s*[A-Z]{2}\\s+\\d{5}(?:-\\d{4})?",
            "(?:P\\.?\\s*O\\.?\\s*Box\\s+\\d+)[,\\s]+[A-Za-z\\s]+,?\\s*[A-Z]{2}\\s+\\d{5}(?:-\\d{4})?"
          ],
          "required": false
        },
        "account_id": {
          "patterns": [
            "(?:Account|Acct)\\.?\\s*(?:#|No\\.?|Number|ID)[:\\s]*(\\S+)",
            "Customer\\s+(?:#|No\\.?|Number|ID)[:\\s]*(\\S+)"
          ],
          "required": false
        },
        "phone": {
          "patterns": [
            "(?:Phone|Tel|Fax|Call)[:\\s]*(1?[\\s.-]?\\(?\\d{3}\\)?[\\s.-]?\\d{3}[\\s.-]?\\d{4})",
            "(1[\\s.-]\\(?\\d{3}\\)?[\\s.-]\\d{3}[\\s.-]\\d{4})",
            "(\\(?\\d{3}\\)?[\\s.-]\\d{3}[\\s.-]\\d{4})"
          ],
          "required": false
        },
        "tax_id": {
          "patterns": [
            "(?:Tax\\s*ID|TIN|EIN)[:\\s]*(\\d{2}-\\d{7})",
            "(?:Federal\\s+ID|FEIN)[:\\s]*(\\d{2}-\\d{7})"
          ],
          "required": false
        }
      }
    }
  }
}
